rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Company logos and app assets
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admin can upload assets
    }
    
    // User profile pictures (new structure)
    match /profile_pictures/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profile pictures (legacy structure)
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Telegram channel images
    match /telegram-channels/{channelId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can upload channel images
    }
    
    // Alternative channel images path
    match /channel-images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can upload channel images
    }
  }
}