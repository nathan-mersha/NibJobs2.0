rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin or superadmin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }
    
    // Jobs collection - readable by everyone, writable for setup
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if true; // Temporary - for initial setup
    }
    
    // Users collection - authenticated users can read all, users can write their own data, admins can update any user
    match /users/{userId} {
      allow read: if request.auth != null; // Allow all authenticated users to read
      allow write: if request.auth != null && request.auth.uid == userId; // Users can write their own data
      allow update: if isAdmin(); // Admins can update any user
      allow create: if request.auth != null; // Allow user creation
    }
    
    // Telegram sources - read-only for authenticated users, write-only for admins
    match /telegram_sources/{sourceId} {
      allow read: if request.auth != null;
      allow write: if false; // Only cloud functions/admin can write
    }
    
    // Failed extractions - admin only
    match /failed_extractions/{failId} {
      allow read, write: if false; // Only cloud functions can access
    }
    
    // Categories collection - read-only for everyone
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Only admin can modify categories
    }
    
    // Job Categories collection - read by everyone, temporary write access for setup
    match /jobCategories/{categoryId} {
      allow read: if true;
      allow write: if true; // Temporary - will be restricted after initial setup
    }
    
    // App metadata - read-only for everyone
    match /metadata/{docId} {
      allow read: if true;
      allow write: if true; // Temporary - for initial setup
    }
    
    // Telegram channels - admin panel access (temporary open access for development)
    match /telegramChannels/{channelId} {
      allow read: if true; // Allow read access for admin panel
      allow write: if true; // Allow write access for admin panel (temporary)
    }
    
    // Scraping progress - readable by authenticated users for real-time updates
    match /scrapingProgress/{sessionId} {
      allow read: if request.auth != null; // Authenticated users can read progress
      allow write: if false; // Only cloud functions can write progress
    }
    
    // Subscription plans - read by everyone, write by authenticated users (admin panel)
    match /subscriptionPlans/{planId} {
      allow read: if true; // Everyone can read subscription plans
      allow write: if request.auth != null; // Authenticated users can update plans (admin access)
    }
  }
}